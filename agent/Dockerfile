FROM python:3.12-slim

ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1 \
    PORT=8000

WORKDIR /app
COPY agent/requirements.txt .
RUN pip install -r requirements.txt

# copy source
COPY agent .

# ðŸŸ¢ pull the model weights once, at buildâ€‘time
RUN python main.py download-files      \
    && echo "Turnâ€‘detector weights downloaded."

EXPOSE 8000
